<style>
  .search-div {
    background-color: rgb(245, 246, 249);
    padding: 0.5rem 1.5rem 0.5rem 0.5rem;
    border-radius: 0.8rem;
  }

  .search-btn {
    background-color: rgb(107, 180, 244);
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  .search-btn:hover {
    background-color: rgb(107, 180, 244);
    color: #fff;
  }

  .search-input {
    border-radius: 25px;
  }

  .brand-name {
    display: none;
  }

  @media(max-width:768px) {
    .brand-name {
      display: inline-block;
      text-align: center;
      margin: 0.2rem;
      position: relative;
      bottom: 0.25rem;
    }

  }
</style>


<nav class="navbar navbar-expand-md bg-body-tertiary border-bottom sticky-top">
  <div class="container-fluid" style="background-color: white;">

    <a class="navbar-brand" href="/listings"><i class="fa-solid fa-compass"></i>
      <h4 class="brand-name">TraveX</h4>
    </a>


    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore Us</a>
      </div>
      <div class="search-div navbar-nav ms-auto">
        <form class="d-flex" role="search" action="/listings" method="get">
          <input name="search" class="form-control me-2 search-input" type="search" placeholder="Search Places"
            aria-label="Search" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>" />
          <button class="btn search-btn" type="submit">Search</button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings">Discover Places</a>
        <a class="nav-link" href="/listings/new">Host with TraveX</a>
        &nbsp;
        <%if(!currUser){%>
          <a class="nav-link" href="/signup"><b>Sign-up</b></a>
          <a class="nav-link" href="/login"><b>Log-in</b></a>
          <%}if(currUser) {%>
            <a class="nav-link" href="/logout">Logout</a>
            <!-- Debug -->
            <p style="color:red !important;" class="nav-link">
              @<%=currUser.username%>
            </p>
            <%}%>
      </div>

    </div>
  </div>
</nav>