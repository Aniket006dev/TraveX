<%- layout("./layouts/boilerplate.ejs")%>

    <style>
        #travex-heading h1 {
            margin: 0.2rem;
        }

        #travex-heading {
            margin-right: 2rem;
            flex: none;
        }

        #categories {
            display: flex;
            /* flex-wrap: wrap; */
            overflow-x: auto;
            scrollbar-width: none;
            margin-left: auto;
            align-self: center;
            border: 2px solid rgb(255, 255, 255);
            background-color: rgb(249, 249, 249);
            align-items: center;
            border-radius: 1.5rem;
            padding: 0.2rem 1.5rem;
            box-shadow: 0px 0px 50px rgb(247, 172, 172);
        }

        .category {
            opacity: 0.8;
            margin-right: 2rem;
            text-align: center;
        }

        .category p {
            margin-bottom: 0;
        }

        .category:hover {
            opacity: 1;
            transform: scale(1.1);
            transition: 0.2s ease-in;
        }


        @media (max-width: 768px) {
            #travex-heading {
                display: none;
            }

            #categories {
                /* overflow-x: auto; */
                flex-wrap: nowrap;
                white-space: nowrap;
                scrollbar-width: thin;
            }

            .category {
                width: 100%;
            }

            .category i {
                font-size: 1rem;

            }

            .tax-switch div{
                font-size: 0.65em;
            }
    
        }


        .tax-switch {
            padding: 0.65rem 0.5rem;
            align-self: center;
            flex: none;
            margin-left: 1rem;
            border-radius: 0.8rem;
            background-color: rgb(243, 243, 243);
            border: 2px solid rgb(184, 184, 184);

        }

        .tax-info {
            display: none;
        }
    </style>

    <body>
        <div class="d-flex mb-3">
            <div id="travex-heading">
                <h1>TraveX</h1>
                <p>A platform for Travellers!!</p>
            </div>
            <div id="categories">
                <div class="category">
                    <div>
                        <a href="/listings?category=top choices"><i class="fa-solid fa-arrow-trend-up"
                                style="color: #de1749;"></i>
                    </div>
                    <p>Top choices</p></a>
                </div>
                <div class="category">
                    <a href="/listings?category=affordable">
                        <div>
                            <i class="fa-solid fa-sack-dollar" style="color: green;"></i>
                        </div>
                        <p>Affordable</p>
                    </a>
                </div>
                <div class="category">
                    <a href="/listings?category=arctic">
                        <div><i class="fa-regular fa-snowflake" style="color: #74C0FC;"></i></div>
                        <p>Arctic</p>
                    </a>
                </div>
                <div class="category">
                    <a href="/listings?category=mountains">
                        <div><i class="fa-solid fa-mountain-sun" style="color: #aa642d;"></i></div>
                        <p>Mountains</p>
                    </a>
                </div>
                <div class="category">
                    <a href="/listings?category=island">
                        <div><i class="fa-solid fa-person-swimming" style="color: #10546a;"></i></div>
                        <p>Island</p>
                    </a>
                </div>
                <div class="category">
                    <a href="/listings?category=popular cities">
                        <div><i class="fa-solid fa-city" style="color: #B197FC;"></i></div>
                        <p>Popular Cities</p>
                    </a>
                </div>
                <div class="category">
                    <a href="/listings?category=holiday hub">
                        <div><i class="fa-solid fa-umbrella-beach" style="color: #ead009;"></i></div>
                        <p>Holiday Hub</p>
                    </a>
                </div>

            </div>

            <div class="tax-switch">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault"><i>Show incl. taxes</i></label>
                </div>

            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 ">
            <%for(let listing of allListings){%>
                <a href="/listings/<%= listing._id%>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image"
                            style="height: 20rem;">
                        <div class="card-img-overlay">icon</div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title%>
                                </b><br>
                                &#8377;<%= listing.price.toLocaleString("en-in")%> / Night
                                    &nbsp; <i class="tax-info">+18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>
        </div>
    </body>

    <script>
        let taxToggle = document.getElementById("flexSwitchCheckDefault");
        taxToggle.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (info of taxInfo) {
                if (info.style.display != "inline") {
                    info.style.display = "inline"
                }
                else {
                    info.style.display = "none"
                }
            }
        })
    </script>