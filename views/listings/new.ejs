<%- layout("./layouts/boilerplate.ejs")%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h2>Create listing:</h2>
                <form action="/listings" method="post" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title:</label>
                        <input type="text" name="listing[title]" placeholder="enter title" class="form-control"
                            id="title" required>
                        <div class="invalid-feedback">Title is required</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea type="text" name="listing[description]" cols="40" rows="5" class="form-control"
                            id="description" placeholder="enter description of the listing..." required></textarea>
                        <div class="invalid-feedback">Please provide description !</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-8">
                            <label for="image" class="form-label">Upload Listing Image:</label>
                            <input type="file" name="listing[image]" class="form-control" id="image" required>
                            <div class="invalid-feedback">Image field can't be empty</div>
                        </div>
                        <div class="mb-3 col-md-4">
                            <label for="categ" class="form-label">Choose Category:</label>
                            <select name="listing[category]" id="categ" class="form-select">
                                <option value="mountains">Mountains</option>
                                <option value="popular cities">Popilar Cities</option>
                                <option value="holiday hub">Holiday Hub</option>
                                <option value="island">Island</option>
                                <option value="arctic">Arctic</option>
                                <option value="affordable">Affordable</option>
                                <option value="top choices" selected>Top Choices</option>
                            </select>
                            <div class="invalid-feedback">Please select category</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price:</label>
                            <input type="number" placeholder="enter price" name="listing[price]" class="form-control"
                                id="price" required min="0">
                            <div class="invalid-feedback">Price field can't be empty</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country:</label>
                            <input type="text" placeholder="enter country" name="listing[country]" class="form-control"
                                id="country" required>
                            <div class="invalid-feedback">Country field can't be empty</div>
                        </div>
                    </div>
                    <div class="md-3">
                        <label for="location" class="form-label">Location:</label>
                        <input type="text" placeholder="enter location" name="listing[location]" class="form-control"
                            id="location" required>
                        <div class="invalid-feedback">Location field can't be empty</div>
                    </div>
                    <!-- NEW FIELD FOR OWNER'S UPI ID -->            
                    <div class="mb-3">
                        <label for="upiId" class="form-label">Your UPI ID</label>
                        <input type="text" name="listing[ownerUpiId]" placeholder="e.g. myupi@upi" class="form-control" required>
                        <div class="invalid-feedback">Please enter your UPI ID</div>
                    </div>
                    <button class="btn btn-primary add-btn mt-4">Add</button>
                </form>
            </div>
        </div>
    </body>