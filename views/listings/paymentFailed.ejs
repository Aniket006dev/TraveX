<%- layout("./layouts/boilerplate.ejs")%>

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="card shadow-lg p-4 text-center" style="max-width: 400px;">
    
    <!-- Error Icon -->
    <div class="mx-auto mb-3 text-danger" style="font-size: 3rem;">
      ❌
    </div>

    <!-- Title -->
    <h2 class="text-danger fw-bold">Payment Failed</h2>

    <!-- Reason -->
    <p class="mt-3 text-muted">
      Reason: <span class="fw-semibold text-dark"><%= reason %></span>
    </p>

    <!-- Retry Button -->
    <a href="/listings/<%= listing._id %>/book" class="btn btn-danger btn-lg mt-3">
      🔁 Try Again
    </a>

    <a href="/listings/<%= listing._id %>" class="btn btn-primary mt-3">Back to Listing</a>

  </div>
</div>
